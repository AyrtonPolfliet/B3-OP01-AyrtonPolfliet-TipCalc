<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">
    

    <TextView
        android:text ="Voer bedrag van de rekening in:"
        android:layout_width ="wrap_content"
        android:layout_height="70px"
        android:id="@+id/textView1"/>
    <EditText
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputRekening"/>
    <TextView
        android:text ="Selecteer percentage van de tip:"
        android:layout_width ="wrap_content"
        android:layout_height="70px"
        android:id="@+id/textView2"/>
    <!-- Hier komt de slider-->
    <EditText
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputRekening"/>
    <Button
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:text ="Bereken de tip"
        android:id="@+id/berekenButton"/>
    


    <LinearLayout
        android:layout_width ="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:minHeight="70px"
        android:minWidth="100px">

        <LinearLayout
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="70px">
        <TextView
            android:text ="Tip: "
            android:layout_width ="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width ="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outputTip"/>
            </LinearLayout>

        <LinearLayout
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="70px">
        <TextView
            android:text ="Totaal: "
            android:layout_width ="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width ="wrap_content"
            android:layout_height="match_parent" 
            android:id="@+id/outputTotaal"/>
        </LinearLayout>
    </LinearLayout>


